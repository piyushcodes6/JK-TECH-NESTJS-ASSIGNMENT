# Application Settings
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=nestjs_assignment
DB_SSL=false

# JWT Settings
JWT_SECRET=super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# User Settings
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=Admin123!
PASSWORD_SALT_ROUNDS=10

# Document Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880
ALLOWED_MIME_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain

# Ingestion Service
PYTHON_SERVICE_URL=http://localhost:5000
WEBHOOK_ENDPOINT=/webhook/ingestion
WEBHOOK_SECRET=webhook-secret-key-change-in-production
INGESTION_QUEUE_SIZE=100
INGESTION_RETRY_ATTEMPTS=3

